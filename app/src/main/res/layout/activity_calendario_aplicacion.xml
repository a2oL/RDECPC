<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_SeleccionaCicloEscolar_CalendarioAplicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Selecciona el Ciclo Escolar de aplicaci칩n: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_EstimadoDocente_CalendarioAplicacion" />

    <TextView
        android:id="@+id/textView_SeleccionaEjercicio_CalendarioAplicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="El ejercicio ser치 aplicado a:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_Anios_CalendarioAplicacion" />

    <Button
        android:id="@+id/button_Iniciar_CalendarioAplicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="536dp"
        android:background="@drawable/ic_btn_inicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_grado_calendario_aplicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Grado escolar del grupo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_Ejercicios_CalendarioAplicacion" />

    <Spinner
        android:id="@+id/spinner_Grado_CalendarioAplicacion"
        android:layout_width="262dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_grado_calendario_aplicacion" />

    <Spinner
        android:id="@+id/spinner_Ejercicios_CalendarioAplicacion"
        android:layout_width="296dp"
        android:layout_height="34dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_SeleccionaEjercicio_CalendarioAplicacion" />

    <Spinner
        android:id="@+id/spinner_Anios_CalendarioAplicacion"
        android:layout_width="192dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_SeleccionaCicloEscolar_CalendarioAplicacion" />

    <Button
        android:id="@+id/button_Regresar_CalendarioAplicacion"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:background="@drawable/ic_btn_flecha_atras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_Logout_CalendarioAplicacion"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:background="@drawable/ic_btn_salir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_CiudadanometroLogo_CalendarioAplicacion"
        android:layout_width="190dp"
        android:layout_height="121dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/button_Logout_CalendarioAplicacion"
        app:layout_constraintStart_toEndOf="@+id/button_Regresar_CalendarioAplicacion"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo_ciudadanometro_grande" />

    <TextView
        android:id="@+id/textView_EstimadoDocente_CalendarioAplicacion"
        android:layout_width="538dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:text="Estimado docente, antes de iniciar la aplicaci칩n del Ciudadan칩metro, te pedimos que proporciones los siguientes datos: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_CiudadanometroLogo_CalendarioAplicacion" />

</androidx.constraintlayout.widget.ConstraintLayout>