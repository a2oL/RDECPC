<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Button
        android:id="@+id/button_Iniciar_Encuestas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="456dp"
        android:background="@drawable/ic_btn_inicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_Enviar_Encuestas"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/ic_btn_subir_resultados"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toEndOf="@+id/textView_NumerodeEncuestas_Encuestas"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_EncuestaInfantiLogo_Encuestas"
        android:layout_width="234dp"
        android:layout_height="118dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toStartOf="@+id/button_Logout_Encuestas"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toEndOf="@+id/button_Regresar_Encuestas"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo_encuesta_infantil_grande" />

    <TextView
        android:id="@+id/textView_NumerodeEncuestas_Encuestas"
        android:layout_width="274dp"
        android:layout_height="23dp"
        android:layout_marginTop="220dp"
        android:text="Numero de encuestas aplicadas"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_Regresar_Encuestas"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:background="@drawable/ic_btn_flecha_atras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_Logout_Encuestas"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:background="@drawable/ic_btn_salir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_InfoBoton_Encuestas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulsa el boton iniciar para comenzar la encuesta"
        app:layout_constraintBottom_toTopOf="@+id/button_Iniciar_Encuestas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_NumerodeEncuestas_Encuestas"
        app:layout_constraintVertical_bias="0.756" />

    <TextView
        android:id="@+id/textView_Internet_Encuestas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Requiere conexion a internet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.871"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Enviar_Encuestas" />

    <Button
        android:id="@+id/btn_reportes_encuestas"
        android:layout_width="151dp"
        android:layout_height="53dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/ic_btn_reportes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Iniciar_Encuestas" />

    <ProgressBar
        android:id="@+id/progressBar_Select"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_EncuestaInfantiLogo_Encuestas" />

</androidx.constraintlayout.widget.ConstraintLayout>