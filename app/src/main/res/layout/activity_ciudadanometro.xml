<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Button
        android:id="@+id/button_Iniciar_Ciudadanometro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="456dp"
        android:background="@drawable/ic_btn_inicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_Enviar_Ciudadanometro"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:layout_marginTop="236dp"
        android:background="@drawable/ic_btn_subir_resultados"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toEndOf="@+id/textView_NumerodeCiudadanometro_Ciudadanometro"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_CiudadanometroLogo_Ciudadanometro"
        android:layout_width="222dp"
        android:layout_height="167dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/button_Logout_Ciudadanometro"
        app:layout_constraintStart_toEndOf="@+id/button_Regresar_Ciudadanometro"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo_ciudadanometro_grande" />

    <TextView
        android:id="@+id/textView_NumerodeCiudadanometro_Ciudadanometro"
        android:layout_width="274dp"
        android:layout_height="23dp"
        android:layout_marginTop="248dp"
        android:text="Numero de ciudadanometros aplicados"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_Regresar_Ciudadanometro"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:background="@drawable/ic_btn_flecha_atras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_Logout_Ciudadanometro"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:background="@drawable/ic_btn_salir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_InfoBoton_Ciudadanometro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulsa el boton iniciar para comenzar el Ciudadanometro"
        app:layout_constraintBottom_toTopOf="@+id/button_Iniciar_Ciudadanometro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_NumerodeCiudadanometro_Ciudadanometro"
        app:layout_constraintVertical_bias="0.756" />

    <TextView
        android:id="@+id/textView_Internet_Ciudadanometro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Requiere conexion a internet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.847"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Enviar_Ciudadanometro" />

    <Button
        android:id="@+id/btn_Reportes_Ciudadanometro"
        android:layout_width="149dp"
        android:layout_height="52dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/ic_btn_reportes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Iniciar_Ciudadanometro" />

    <ProgressBar
        android:id="@+id/progressBar_Reportes_Ciudadanometro"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_CiudadanometroLogo_Ciudadanometro" />


</androidx.constraintlayout.widget.ConstraintLayout>