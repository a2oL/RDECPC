<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">

    <Button
        android:id="@+id/button_EncuestasCiudadano_Main"
        android:layout_width="151dp"
        android:layout_height="68dp"
        android:layout_marginTop="324dp"
        android:backgroundTint="#673AB7"
        android:text="Encuestas y Ciudadanometro"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_Dpc_Main"
        android:layout_width="171dp"
        android:layout_height="148dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/ic_logo_dpc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.853"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_EncuestasCiudadano_Main" />

    <Button
        android:id="@+id/button_Eventos_Main"
        android:layout_width="179dp"
        android:layout_height="152dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/ic_logo_eventos_y_concursos_vigentes_grande"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_EncuestasCiudadano_Main" />

    <Button
        android:id="@+id/button_Fb_Main"
        android:layout_width="68dp"
        android:layout_height="51dp"
        android:layout_marginStart="64dp"
        android:background="@drawable/ic_btn_facebook"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Eventos_Main" />

    <Button
        android:id="@+id/button_Tw_Main"
        android:layout_width="68dp"
        android:layout_height="51dp"
        android:layout_marginStart="52dp"
        android:background="@drawable/ic_btn_twitter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_Fb_Main"
        app:layout_constraintTop_toBottomOf="@+id/button_Eventos_Main"
        app:layout_constraintVertical_bias="0.497" />

    <Button
        android:id="@+id/button_Insta_Main"
        android:layout_width="68dp"
        android:layout_height="51dp"
        android:layout_marginStart="76dp"
        android:background="@drawable/ic_btn_instagram"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_Tw_Main"
        app:layout_constraintTop_toBottomOf="@+id/button_Eventos_Main" />

    <Button
        android:id="@+id/button_Yt_Main"
        android:layout_width="68dp"
        android:layout_height="51dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/ic_btn_youtube"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toEndOf="@+id/button_Insta_Main"
        app:layout_constraintTop_toBottomOf="@+id/button_Eventos_Main" />

    <ImageView
        android:id="@+id/imageView_LogoRedDigital_Main"
        android:layout_width="326dp"
        android:layout_height="264dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo_red" />

    <ProgressBar
        android:id="@+id/progressBar_Main"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_EncuestasCiudadano_Main" />

</androidx.constraintlayout.widget.ConstraintLayout>