<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Button
        android:id="@+id/button_Enviar_Encuestas"
        android:layout_width="78dp"
        android:layout_height="57dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/ic_btn_naranja_tiempo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toEndOf="@+id/textView_NumerodeEncuestas_Encuestas"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_EncuestaInfantiLogo_Encuestas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="372dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button_Logout_Encuestas"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo_encuesta_infantil" />

    <TextView
        android:id="@+id/textView_NumerodeEncuestas_Encuestas"
        android:layout_width="274dp"
        android:layout_height="23dp"
        android:layout_marginTop="216dp"
        android:text="Numero de encuestas aplicadas"
        android:textAlignment="center"
        android:textColor="#2196F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.321"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_Regresar_Encuestas"
        android:layout_width="73dp"
        android:layout_height="59dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_btn_flecha_atras"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.822"
        app:layout_constraintStart_toEndOf="@+id/imageView_EncuestaInfantiLogo_Encuestas"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_Logout_Encuestas"
        android:layout_width="73dp"
        android:layout_height="59dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_btn_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_InfoBoton_Encuestas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulsa el boton para comenzar la encuesta"
        app:layout_constraintBottom_toTopOf="@+id/button_Iniciar_Encuestas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_NumerodeEncuestas_Encuestas"
        app:layout_constraintVertical_bias="0.682" />

    <Button
        android:id="@+id/button_Iniciar_Encuestas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="404dp"
        android:background="@drawable/ic_btn_inicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_Internet_Encuestas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Requiere conexion a internet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.707"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Enviar_Encuestas" />

</androidx.constraintlayout.widget.ConstraintLayout>