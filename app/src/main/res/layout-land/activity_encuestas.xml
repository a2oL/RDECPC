<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Button
        android:id="@+id/button_Enviar_Encuestas"
        android:layout_width="180dp"
        android:layout_height="49dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/ic_btn_subir_resultados"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.202"
        app:layout_constraintStart_toEndOf="@+id/textView_NumerodeEncuestas_Encuestas"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_EncuestaInfantiLogo_Encuestas"
        android:layout_width="304dp"
        android:layout_height="103dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toStartOf="@+id/button_Logout_Encuestas"
        app:layout_constraintStart_toEndOf="@+id/button_Regresar_Encuestas"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo_encuesta_infantil_grande" />

    <TextView
        android:id="@+id/textView_NumerodeEncuestas_Encuestas"
        android:layout_width="274dp"
        android:layout_height="23dp"
        android:layout_marginTop="216dp"
        android:text="Numero de encuestas aplicadas"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.321"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_Regresar_Encuestas"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_btn_flecha_atras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_Logout_Encuestas"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_btn_salir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_InfoBoton_Encuestas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulsa el boton iniciar para comenzar la encuesta"
        app:layout_constraintBottom_toTopOf="@+id/button_Iniciar_Encuestas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_NumerodeEncuestas_Encuestas"
        app:layout_constraintVertical_bias="0.682" />

    <Button
        android:id="@+id/button_Iniciar_Encuestas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="404dp"
        android:background="@drawable/ic_btn_inicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.296"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_Internet_Encuestas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Requiere conexion a internet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.707"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Enviar_Encuestas" />

    <Button
        android:id="@+id/btn_reportes_encuestas"
        android:layout_width="129dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/ic_btn_reportes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toEndOf="@+id/button_Iniciar_Encuestas"
        app:layout_constraintTop_toBottomOf="@+id/textView_InfoBoton_Encuestas" />

    <ProgressBar
        android:id="@+id/progressBar_Select"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_EncuestaInfantiLogo_Encuestas" />

</androidx.constraintlayout.widget.ConstraintLayout>